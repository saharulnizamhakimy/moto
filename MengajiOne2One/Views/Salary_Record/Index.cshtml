@model IEnumerable<MengajiOne2One.Models.Salary_Record>

@{
    ViewBag.Title = "Tambah Rekod Elaun";
}

<h2>Senarai Elaun</h2>

<p>
    @Html.ActionLink("Tambah Rekod Elaun", "Create", null, new { @class = "btn btn-success btnStyle" })
</p>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessage"]
    </div>

}
@using (Html.BeginForm())
{
<div style="border: 25px; border: 2px solid #c7ccbe; padding: 20px; ">
    <div class="row">
        <div class="col-sm-6">
            Bulan:  @Html.DropDownList("SearchBulan", new List<SelectListItem>{
   new SelectListItem{ Text="Sila Pilih", Value = "", Disabled=true, Selected=true},
   new SelectListItem{ Text="Januari", Value = "Januari" },
   new SelectListItem{ Text="Februari", Value = "Februari" },
   new SelectListItem{ Text="Mac", Value = "Mac" },
   new SelectListItem{ Text="April", Value = "April" },
   new SelectListItem{ Text="Mei", Value = "Mei" },
   new SelectListItem{ Text="Jun", Value = "Jun" },
   new SelectListItem{ Text="Julai", Value = "Julai" },
   new SelectListItem{ Text="Ogos", Value = "Ogos" },
   new SelectListItem{ Text="September", Value = "September" },
   new SelectListItem{ Text="Oktober", Value = "Oktober" },
   new SelectListItem{ Text="November", Value = "November" },
   new SelectListItem{ Text="Disember", Value = "Disember" }}, htmlAttributes: new { @class = "form-control" })
        </div>
        @{ var i = @DateTime.Now.Year;}
        <div class="col-sm-6">
            Tahun:@Html.DropDownList("SearchTahun", new List<SelectListItem>{
     new SelectListItem{ Text="Sila Pilih", Value = "", Disabled=true, Selected=true },
   new SelectListItem{ Text=(@i-1).ToString(), Value = (@i-1).ToString() },
   new SelectListItem{ Text=@i.ToString(), Value = @i.ToString() },
   new SelectListItem{ Text=(@i+1).ToString(), Value = (@i+1).ToString() }}, htmlAttributes: new { @class = "form-control" })
        </div>

    </div>
    <br />
    <div style="text-align:center;">
        <input type="submit" value="Tapis" class="btn btn-info" />
    </div>
</div>
   


}
<br />
<div class=" table-responsive">
    <table class="table " id="example1">
        <thead>
            <tr>
                <th style="display:none;">
                    @Html.DisplayNameFor(model => model.sal_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_Record.u_name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.sal_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sal_month)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sal_year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sal_amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sal_status)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td style="display:none;">
                        @Html.DisplayFor(modelItem => item.sal_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_Record.u_name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.sal_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sal_month)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sal_year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sal_amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sal_status)
                    </td>
                    <td>
                        @Html.ActionLink("Kemaskini", "Edit", new { id = item.sal_ID }, new { @class = "btn btn-warning btnStyle" })
                        @Html.ActionLink("Butiran", "Details", new { id = item.sal_ID }, new { @class = "btn btn-info btnStyle" })
                        @Html.ActionLink("Padam", "Delete", new { id = item.sal_ID }, new { @class = "btn btn-danger btnStyle" })
                        @Html.ActionLink("Invois", "ViewInvoice", new { id = item.sal_ID }, new { @class = "btn btn-primary btnStyle", target = "_blank" })
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
