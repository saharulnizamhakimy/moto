@model IEnumerable<MengajiOne2One.Models.Salary_Record>

@{
    ViewBag.Title = "Tambah Rekod Elaun";
}

<h2>Tambah Rekod Elaun</h2>

<p>
    @Html.ActionLink("Tambah Rekod Elaun", "Create", null, new { @class = "btn btn-success btnStyle" })
</p>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessage"]
    </div>

}
<div class=" table-responsive">
    <table class="table ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User_Record.u_name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.sal_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sal_month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sal_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sal_status)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User_Record.u_name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.sal_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sal_month)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sal_amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sal_status)
                </td>
                <td>
                    @Html.ActionLink("Kemaskini", "Edit", new { id = item.sal_ID }, new { @class = "btn btn-warning btnStyle" })
                    @Html.ActionLink("Butiran", "Details", new { id = item.sal_ID }, new { @class = "btn btn-info btnStyle" })
                    @Html.ActionLink("Padam", "Delete", new { id = item.sal_ID }, new { @class = "btn btn-danger btnStyle" })
                    @Html.ActionLink("Invois", "ViewInvoice", new { id = item.sal_ID }, new { @class = "btn btn-danger btnStyle" })
                </td>
            </tr>
        }

    </table>
    </div>
