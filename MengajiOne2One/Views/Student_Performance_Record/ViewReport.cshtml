@model Tuple<MengajiOne2One.Models.Student_Performance_Record, List<MengajiOne2One.Models.Class_Record>>
@{
    ViewBag.Title = "ViewReport";
    Layout = "";
}


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Mengaji One To One</title>
    <link rel="stylesheet" href="~/Content/Style2.css">
    <link rel="license" href="https://www.opensource.org/licenses/mit-license/">
    <script src="~/Scripts/script.js"></script>
    <!-- Custom fonts for this template-->
    <link href="~/Theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Theme/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body>
    <div class="row justify-content-center pb-5">
        <div class="well col-xs-10 col-sm-10 col-md-3 ">
            <button onclick="window.print()" id="printPageButton"><i style="font-size:24px" class="fas fa-print">&#xf02f;</i></button>
        </div>
    </div>

    <div class="row justify-content-center">
        <img src="~/Theme/logo.png" width="200" height="150" class="img" alt="Responsive image">
    </div>
    <br>
    <div class="row justify-content-center">
        <h2> LAPORAN BULANAN PELAJAR</h2>
    </div>

    <div class="row justify-content-center">
        <div class="well col-xs-10">
            <div style="text-align:center">
                <address>
                    Bulan: @Html.DisplayFor(model => model.Item1.per_month)<br>
                    Nama Pelajar: @Html.DisplayFor(model => model.Item1.Student_Record.s_name)<br>
                    Kod : @Html.DisplayFor(model => model.Item1.Student_Record.s_id)<br>
                    Guru:
                    @foreach (var item in Model.Item2)
                    {
                        @item.User_Record.u_name
                        break;
                    }<br><br>
                </address>
                <table class="inventory">
                    <thead>
                        <tr>
                            <th><span>No</span></th>
                            <th><span>Tarikh Kelas</span></th>
                            <th><span>Masa Mula</span></th>
                            <th><span>Masa Tamat</span></th>
                            <th><span>Tempoh (Minit)</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 0;
                            var total = 0;}
                        @foreach (var item in Model.Item2)
                        {
                            <tr>

                                <td>
                                    @{i++;}
                                    @i
                                </td>
                                <td>@item.c_date.ToShortDateString()</td>
                                <td>@item.c_timeStart</td>
                                <td>@item.c_timeEnd</td>
                                <td>@item.c_duration</td>
                            </tr>
                            total = (int)(total + @item.c_duration);
                        }
                        <tr>

                            <td>
                            </td>
                            <td></td>
                            <td></td>
                            <td>Jumlah Masa:</td>
                            <td>@total Minit</td>
                        </tr>
                        <tr>

                            <td>
                            </td>
                            <td></td>
                            <td></td>
                            <td>Jumlah Yuran :</td>
                            <td>RM   @Html.DisplayFor(model => model.Item1.per_amaunt)</td>
                        </tr>

                    </tbody>
                </table>
                <h5 style="text-align:left">Ulasan : @Html.DisplayFor(model => model.Item1.per_desc)<br></h5>

            </div>

        </div>

    </div>

</body>

