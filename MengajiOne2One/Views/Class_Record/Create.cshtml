@model MengajiOne2One.Models.Class_Record

@{
    ViewBag.Title = "Tambah Rekod Kelas";
}

<h2>Tambah Rekod Kelas</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.c_date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.c_date, new { @Value = @DateTime.Now.ToShortDateString(), htmlAttributes = new { @class = "form-control" } }) })
                @Html.ValidationMessageFor(model => model.c_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.c_studentID,  htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("c_studentID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.c_studentID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.c_teacherID, "c_teacherID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.c_teacherID, new { @Value = User.Identity.Name, htmlAttributes = new { @class = "form-control" }, maxlength = "12" }) })
                @Html.ValidationMessageFor(model => model.c_teacherID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.c_timeStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.c_timeStart, new { @Value = DateTime.Now.ToString("HH:mm:ss"), htmlAttributes = new { @class = "form-control" }, maxlength = "50" }) })
                @Html.ValidationMessageFor(model => model.c_timeStart, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Mula Kelas" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
