@model MengajiOne2One.Models.Student_Record

@{
    ViewBag.Title = "Butiran Pelajar";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessage"]
    </div>

}
<h2>Butiran Pelajar</h2>

<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.s_name)
        </dt>

        <dd>
            @Html.EditorFor(model => model.s_name, new { htmlAttributes = new { @class = "form-control", @readonly = "True" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.s_age)
        </dt>

        <dd>
            @Html.EditorFor(model => model.s_age, new { htmlAttributes = new { @class = "form-control", @readonly = "True" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.s_address)
        </dt>

        <dd>
            @Html.EditorFor(model => model.s_address, new { htmlAttributes = new { @class = "form-control", @readonly = "True" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.s_contactNo)
        </dt>

        <dd>
            @Html.EditorFor(model => model.s_contactNo, new { htmlAttributes = new { @class = "form-control", @readonly = "True" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.s_regDate)
        </dt>

        <dd>
            @Html.TextBoxFor(model => model.s_regDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @readonly = "true" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.s_package)
        </dt>

        <dd>
            @Html.EditorFor(model => model.s_package, new { htmlAttributes = new { @class = "form-control", @readonly = "True" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User_Record.u_name)
        </dt>

        <dd>
            @Html.EditorFor(model => model.User_Record.u_name, new { htmlAttributes = new { @class = "form-control", @readonly = "True" } })
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Kemaskini", "Edit", new { id = Model.s_id }) |
    @Html.ActionLink("Kembali", "Index", "StartStudent")
</p>
