@model MengajiOne2One.Models.Student_Record

@{
    ViewBag.Title = "Kemaskini";
}



<h2>Kemaskini</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.s_id)
    @Html.HiddenFor(model => model.s_name)
    @Html.HiddenFor(model => model.s_age)
    @Html.HiddenFor(model => model.s_regDate)
    @Html.HiddenFor(model => model.s_teacherID)
    @Html.HiddenFor(model => model.s_package)



    <div class="form-group">
        @Html.LabelFor(model => model.s_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.s_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.s_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.s_pwd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.s_pwd, new { htmlAttributes = new { @class = "form-control", type = "password", id = "pwd1" } })
            @Html.ValidationMessageFor(model => model.s_pwd, "", new { @class = "text-danger" })
            <input type="checkbox" onclick="myFunction1()">  Lihat Kata Laluan
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2"> Sahkan Kata Laluan </label>
        <div class="col-md-10">
            <input class="form-control" type="password" id="pwd2">
            <input type="checkbox" onclick="myFunction2()">  Lihat Kata Laluan
        </div>
    </div>
    <script>

        function matchPassword() {
            var pw1 = document.getElementById("pwd1");
            var pw2 = document.getElementById("pwd2");
            if (pw1.value != pw2.value) {
                alert("Kata laluan tidak sama");
                return false;
            } 
        }

        function myFunction1() {
            var x = document.getElementById("pwd1");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }

        function myFunction2() {
            var x = document.getElementById("pwd2");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>

    <div class="form-group">
        @Html.LabelFor(model => model.s_address, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.s_address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.s_address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.s_contactNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.s_contactNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.s_contactNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kemaskini" class="btn btn-success" onclick="return matchPassword()" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Kembali", "Details", new { id = @Session["UserID"] })
</div>


